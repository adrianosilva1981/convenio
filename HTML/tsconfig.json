{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@global/*": [
        "global/*"
      ],
      "@env": [
        "src/environments/environment"
      ],
      "@app-backoffice/*": [
        "projects/app-backoffice/src/app/*"
      ],
      "lib-components": [
        "dist/lib-components",
        "node_modules/lib-components" //<---- Esta linha
      ],
      "lib-components/*": [
        "dist/lib-components/*",
        "node_modules/lib-components" //<---- Esta linha
      ],
      "lib-services": [
        "dist/lib-services",
        "node_modules/lib-services" //<---- Esta linha
      ],
      "lib-services/*": [
        "dist/lib-services/*",
        "node_modules/lib-services" //<---- Esta linha
      ]
    }
  }
}